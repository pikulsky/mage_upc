<?xml version="1.0"?>
<config>
<sections>
    <payment>
        <groups>
            <upcpayment translate="label">
                <label>UPC Payment</label>
                <frontend_type>text</frontend_type>
                <sort_order>1</sort_order>
                <show_in_default>1</show_in_default>
                <show_in_website>1</show_in_website>
                <show_in_store>1</show_in_store>
                <fields>
                    <active translate="label">
                        <label>Enabled</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>10</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </active>
                    <test translate="label">
                        <label>Test Mode</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_yesno</source_model>
                        <sort_order>20</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </test>
                    <title translate="label">
                        <label>Title</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>30</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </title>
                    <sort_order translate="label">
                        <label>Sort Order</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>40</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                        <comment>Sort order among other payment options during checkout</comment>
                    </sort_order>
                    <merchant_id translate="label">
                        <label>Merchant ID</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>50</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </merchant_id>
                    <terminal_id translate="label">
                        <label>Terminal ID</label>
                        <frontend_type>text</frontend_type>
                        <sort_order>60</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </terminal_id>
                    <private_key translate="label">
                        <label>Private Key</label>
                        <frontend_type>file</frontend_type>
                        <backend_model>adminhtml/system_config_backend_file</backend_model>
                        <upload_dir>var/uploads</upload_dir>
                        <comment>File is saved in var/uploads folder</comment>
                        <sort_order>70</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </private_key>
                    <public_key translate="label">
                        <label>Public Key</label>
                        <frontend_type>file</frontend_type>
                        <backend_model>adminhtml/system_config_backend_file</backend_model>
                        <upload_dir>var/uploads</upload_dir>
                        <comment>File is saved in var/uploads folder</comment>
                        <sort_order>80</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </public_key>
                    <interface_language translate="label">
                        <label>Interface Language</label>
                        <frontend_type>select</frontend_type>
                        <source_model>upcpayment/source_interfacelanguages</source_model>
                        <sort_order>90</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>0</show_in_store>
                    </interface_language>
                    <notify_url translate="label">
                        <label>Notify URL</label>
                        <frontend_type>label</frontend_type>
                        <backend_model>upcpayment/config_data_notifyurl</backend_model>
                        <sort_order>102</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                        <tooltip>Save this Notify URL in your merchant account in UPC</tooltip>
                        <comment>Save this Notify URL in your merchant account in UPC</comment>
                    </notify_url>
                </fields>
            </upcpayment>
        </groups>
    </payment>
</sections>
</config>